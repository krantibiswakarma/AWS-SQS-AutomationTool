package GLTesting.SQSTool;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.Properties;

import com.google.gson.Gson;

public class GiveMeJSON {
	
	private static Properties prop;
	private static String body;
	private static String path = "D:\\Automation\\SQS-AutomationForGL\\SQSTool\\SQS.properties";
	
	

	public static String jsonBody() {
	//Gson gson = new Gson();
	//String jsonPayLoad = gson.toJson(getBody());
	//return jsonPayLoad;
	return getPropertyFromFile("body");
	}
	
	public static void readFile() {
		
		File file = new File(path);
		FileInputStream fi;
		try {
			fi = new FileInputStream(file);
			prop = new Properties();
			prop.load(fi);
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	
	public static String getPropertyFromFile(String value) {
		readFile();
		body = prop.getProperty(value);
		System.out.println(body);
		return body;
	}
}
